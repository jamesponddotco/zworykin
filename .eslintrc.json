{
  "root": true,
  "env": {
  	"browser": true,
  	"jquery": true
  },
  "extends": [
  	"plugin:@wordpress/eslint-plugin/recommended",
  	"eslint:recommended",
  	"plugin:unicorn/recommended",
  	"plugin:prettier/recommended"
  ],
  "rules": {
  	"max-len": [
  	  "error",
  	  {
  	  	"code": 80,
  	  	"ignoreUrls": true,
  	  	"ignoreStrings": true,
  	  	"ignoreComments": true,
  	  	"ignoreTemplateLiterals": true
  	  }
  	]
  },
  "ignorePatterns": [
  	"node_modules",
  	"vendor"
  ]
}
